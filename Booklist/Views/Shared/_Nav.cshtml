@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">Booklist</a>

    @if (SignInManager != null && SignInManager.IsSignedIn(User)){
        <div class="navbar-nav ml-auto">
            <ul class="nav nav-pills">
                <li class="nav-item dropdown ">
                    <a href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" class="nav-link dropdown-toggle">@UserManager.GetUserName(User)</a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a href="#" class="dropdown-item">Profile</a>
                        <a href="/book" class="dropdown-item">Books</a>
                        <a href="#" class="dropdown-item">BluRays</a>
                        <div class="dropdown-divider"></div>
                            <a href="/auth/logout" class="dropdown-item">Logout</a>
                        
                    </div>
                </li>
            </ul>
            
        </div>
    }
    else 
    {
        <div class="navbar-nav ml-auto">
            <a class="btn btn-secondary" href="/auth/login">Login</a>
        </div>
    }
</nav>